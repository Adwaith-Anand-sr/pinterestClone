<!doctype html>
<html>
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
   <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="w-full h-screen ">
   <main class="w-full h-screen overflow-x-hidden bg-black pb-[2vh]">
      <div id="post-section" class="mt-[0%] w-full flex flex-col gap-[1vh]">
         <% posts.forEach((item,index)=>{ %>
            <div class="text-white w-[100vw] ">
               <div class="w-full flex items-center justify-between px-[3vw] bg-black h-[7vh]">
                  <div class="flex items-center gap-[2vw]">
                  <img src="<%= users[index].dp %>" class="w-[10vw] h-[10vw] object-cover bg-center rounded-full bg-orange-600">
                  <h1><%= users[index].username %></h1>
                  </div>
                  <% if(item.location !=""){ %>
                  <div class="loc text-zinc-400 text-[0.8rem]">
                     <i class="bi bi-geo-alt text-[0.9rem]"></i>
                     <%= item.location %>
                  </div>
                  <% } %>
               </div>
               <img class="w-full object-cover" src="<%= item.posts %>">
               <div class="bg-black py-[1vh] w-full h-[20%]">
                  <div class="controls text-[1.25rem] w-full font-black px-[4vw] flex gap-[5vw] py-[1vh]">
                     <div class="like flex items-center flex-col">
                        <i class="bi bi-heart"></i>
                        <span class="text-[0.55rem] font-normal text-zinc-500"><%= item.likes.length %> likes</span>
                     </div>
                     <i class="bi bi-send"></i>
                     <i class="bi bi-chat"></i>
                  </div>
                  <div class="createdAt ml-[3.54vw] mt-[-1vh] mb-[1vh] text-zinc-500 text-[0.7rem]">19 hours ago..</div>
                  <div class="captions font-black text-[0.8rem] ml-[4vw]"><span class="text-[0.6rem text-zinc-500 lowercase tracking-tighter mr-[2vw]">@<%= users[index].username %></span><%= item.caption %></div>
               </div>
            </div>
         <% }) %>
      
         
      </div>
   </main>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
   <script src="/javascripts/script.js"></script>
</body>
</html>