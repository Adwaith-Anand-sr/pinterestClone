         <div class="flex gap-[6vw] text-[1.4rem] pt-[1.5vh] mr-[4vw]">
            <i class="bi bi-heart"></i>
            <i class="bi bi-messenger"></i>
         </div>
      </div>
      <div>
         <div id="stories" class="whitespace-nowrap overflow-x-auto h-[60%] w-full">
            <% for(i=0;i<8;i++){ %>
               <div class="border ml-[2vw] mr-[1vw] inline-block border-white w-[8vh] h-[8vh] rounded-full"></div>
            <% } %>
         </div>

      </div>
   </div>
   <div id="main">
      <% post.forEach((item)=>{  %>
         <% const imageUrl = `https://storage.googleapis.com/pinclone-000.appspot.com/${item.image}`; %>
         <div id="<%= item.image %>" class="box w-full h-[70vh] overflow-hidden">
            <div class="dets h-[5.5vh] w-full flex gap-[3vw] items-center">
               <div class="dp w-[8vw] h-[8vw] border border-white rounded-full ml-[2.5vw]">
                  <img src="">
               </div>
               <h1 class="font-semibold text-[0.8rem]"><%= item.username%></h1>
            </div>
            <img class="w-full h-[70%] object-cover" src="<%= imageUrl %>" alt="Post Image">
            <div class="relative z-20 w-full flex justify-between my-[1vh] px-[3vw]">
               <div class="text-[1.5rem] opacity-[0.9] pl-[1vw] flex gap-[4vw]">
                  <a class="like-btn" id="<%=item._id%>">
                     <i class="bi bi-heart"></i>
                  </a>
                  <a><i class="bi bi-chat"></i></a>
                  <a><i class="bi bi-send"></i></a>
               </div>
               <div class="text-[1.5rem] ">
                  <i class="bi bi-bookmark"></i>
               </div>
            </div>
            <h2 id="likeCount-<%=item._id%>" class="like-count px-[3vw] opacity-[0.9] font-black text-[0.8rem]"><span><%= item.likes.length %></span> likes </h2>
            <div class="description h-[5vh] text-[0.8rem] py-[1vh] px-[3vw]"><span class="mr-[3vw]"><%= item.username %> :</span> add your description here...</div>
            <h2 class="px-[3vw] text-[0.8rem] font-thin opacity-[0.5]">
               <% const uploadedDate = new Date(item.date); %>
               <% const currentDate = new Date();
               const differenceInTime = currentDate.getTime() - uploadedDate.getTime();
               const differenceInDays = differenceInTime / (1000 * 3600 * 24);
               const differenceInHours = differenceInTime / (1000 * 3600);
               if (differenceInDays < 1) { %>
                  <%= Math.floor(differenceInHours) %> hours ago
                  <% }else if (differenceInDays <= 7) { %>
                  <%= Math.floor(differenceInDays) %> days ago
               <% } else { %>
                  <% const options = { year: 'numeric', month: 'long', day: 'numeric' };
                  const formattedDate = uploadedDate.toLocaleDateString(undefined, options); %>
                  <%= formattedDate %> ago
               <% } %>
            </h2>
         </div>
      <% }) %>
   </div>
   
